@model List<Contact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manage/Views/Shared/_ManageLayout.cshtml";
    
}

<div class="album py-5 bg-light">
    <div class="container">

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach (var item in Model)
             {
                
                <div class="col">
                    <div class="card shadow-sm">
                        <div class="card-body">       
                            <p class="text-primary fw-bolder">FirstName : <span>@item.FirstName</span></p>
                            <p class="text-primary fw-bolder">LastName : <span>@item.LastName</span></p>
                            <p class="text-success fw-bolder">Email Addres : <span>@item.EmailAddress</span></p>
                            <span class="text-warning fw-bolder">Subject : </span>
                            <p class="card-text">@item.Subject </p>
                            <span class="text-warning fw-bolder">Comments :</span>
                            <p class="card-text">
                                @item.Comments
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <button type="submit" asp-action="PermaDelete" asp-controller="Contact" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Perma-Delete</button>
                            </div>
                            <small class="text-muted">@item.CreatedTime</small>
                        </div>
                    </div>
                </div>
             }


        </div>
    </div>
</div>



