@model List<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manage/Views/Shared/_ManageLayout.cshtml";
    int order = 0;
}

<div class="container-fluid">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <h1>Blog</h1>
        <a asp-action="Create" asp-controller="Blog" class="btn btn-primary">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Title</th>
                <th scope="col">Description </th>
                <th scope="col">CagoryName </th>
                <th scope="col"> Is Deleted</th>
                <th scope="col"> Image</th>
                <th scope="col">Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                order++;
                <tr>
                    <th scope="row">@order</th>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>@item.BlogCategory.CatogryName</td>
                    <td class="@(item.IsDeleted?"text-danger":"text-info")">@(item.IsDeleted==true?"Deleted":"On Active")</td>
                    <td><img src="~/assets/uploadimg/@item.Image" style="max-width:100px" /></td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                            <a asp-action="Edit" asp-controller="Blog" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                            <a asp-action="Delete" asp-controller="Blog" asp-route-id="@item.Id" class="btn btn-info btn-sweet-delete">Delete</a>
                            <a asp-action="PermaDelete" asp-controller="Blog" asp-route-id="@item.Id" class="btn btn-danger btn-sweet-delete">Perma-Delete</a>
                         </div>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>

