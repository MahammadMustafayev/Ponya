@model OurTeam
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Manage/Views/Shared/_ManageLayout.cshtml";
}

<div class="container-fluid">
    <form method="post" enctype="multipart/form-data">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="FullName">FullName</label>
                <input asp-for="FullName" class="form-control" placeholder="FullName">
            </div>
            <div class="form-group col-md-4">
                <label asp-for="BriefInformation">BriefInformation</label>
                <input asp-for="BriefInformation" class="form-control" placeholder="BriefInformation">
            </div>
            <div class="form-group col-md-4">
                <label asp-for="RankNumber">RankNumber</label>
                <input asp-for="RankNumber" class="form-control" placeholder="RankNumber">
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Position">Position</label>
                <input asp-for="Position" class="form-control" placeholder="Position">
            </div>
        </div>
        <div class="form-row">

            <div class="form-group col-md-4">
                <label asp-for="IsDeleted">Is Deleted</label>
                <input asp-for="IsDeleted" class="form-control" placeholder="Is Deleted">
            </div>

            <div class="form-group col-md-4">
                <label asp-for="Photo"></label>
                <input type="file" asp-for="Photo" class="form-control" placeholder="Image">
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Edit</button>
        </div>
    </form>
</div>

