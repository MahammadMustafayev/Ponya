@model Pricing
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Manage/Views/Shared/_ManageLayout.cshtml";
}

<div class="container-fluid">
    <form method="post" enctype="multipart/form-data">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Title">Title</label>
                <input asp-for="Title" class="form-control" placeholder="Title">
            </div>
            <div class="form-group col-md-6">
                <label asp-for="SellPrice">Sell Price</label>
                <input asp-for="SellPrice" class="form-control" placeholder="Sell Price">
            </div>
            <div class="form-group col-md-6">
                <label asp-for="CostPrice">Cost Price</label>
                <input asp-for="CostPrice" class="form-control" placeholder="Cost Price">
            </div>
            <div class="form-group col-md-4">
                <label asp-for="DiscountPrice">Discount Price</label>
                <input asp-for="DiscountPrice" class="form-control" placeholder="Discount Price">
            </div>
            <div class="form-group col-md-4">
                <label asp-for="StockCount">Stock Count</label>
                <input asp-for="StockCount" class="form-control" placeholder="Stock Count">
            </div>


        </div>
        <div class="form-row">

            <div class="form-group col-md-4">
                <label asp-for="IsDeleted">Is Deleted</label>
                <input asp-for="IsDeleted" class="form-control" placeholder="Is Deleted">
            </div>
            <div class="form-group col-md-4">
                <label asp-for="IsNew">Is New</label>
                <input asp-for="IsNew" class="form-control" placeholder="Is New">
            </div>

        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Edit</button>
        </div>
    </form>
</div>

